<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.KategoriPage">
  <StackLayout Orientation="Vertical"  >

      
      <ListView x:Name="daftarKategori" ItemsSource="{Binding listKategori}">
          <ListView.ItemTemplate>
            <DataTemplate>
              <TextCell Text="{Binding KategoriId}" Detail="{Binding NamaKategori}" DetailColor="Red"/>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
    
    <Button x:Name="AddKat" Text="Add Category" />
  </StackLayout>
</ContentPage>