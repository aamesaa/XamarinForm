<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.BindingBarang">
  
  
  <ListView x:Name="listBarang" ItemsSource="{Binding daftarBarang}" ItemSelected="ListBarang_ItemSelected"> 
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding kodeBarang}" Detail="{Binding namaBarang}" TextColor="Red" DetailColor="Blue"/>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>